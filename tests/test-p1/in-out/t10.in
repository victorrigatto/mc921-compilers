int main() {
   int n, r = 0, t;

   print("Enter an integer to check if it's palindrome or not:");
   read(n);

   t = n;

   while (t != 0)
   {
      r = r * 10;
      r = r + t%10;
      t = t/10;
   }

   if (n == r)
      print(n, " is a palindrome number.");
   else
      print(n, " isn't a palindrome number.");

   return 0;
}
